package unit4;
import java.util.*;

public class Practicing_If_Statements {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Enter a value for y: ");
		double y;
		double x = 0;
		
		y = input.nextDouble ();		
		if (y > x) 
		{
			x = 1;
			System.out.println("x = " + x );
		}
		
	}
}
