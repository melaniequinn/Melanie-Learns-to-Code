package unit4;
import java.util.*;
//ENTER THE FIRST COUNTRY: Enter the second country: Enter the third country:
//The three countries in descending order are S G F 
//compare strings and use if statements w results to order the input
public class AlphabetizeCountries {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter the first country: ");
		String country1 = input.nextLine();
		System.out.print("Enter the second country: ");
		String country2 = input.nextLine();
		System.out.print("Enter the third country: ");
		String country3 = input.nextLine();
		
		System.out.print("The countries in descending (reverse alphabetical) order are: ");
	/*	A B C
		A C B
		B A C
		B C A
		C A B
		C B A
	*/	if (country1.compareToIgnoreCase(country3) > 0) {        	//A _ _
			if (country1.compareToIgnoreCase(country2) > 0) { 	 	//A B _
				if (country2.compareToIgnoreCase(country3) > 0) 	//A B C
				System.out.println(country1 + country2 + country3); 
				}
			else													
				System.out.println(country1 + country3 + country2); //A C B

		}
		else if (country2.compareToIgnoreCase(country1) > 0 ) {		//B _ _
			if (country2.compareToIgnoreCase(country3) > 0 ) {		//B A _
				if (country1.compareToIgnoreCase(country3) > 0)		//B A C
				System.out.println(country2 + country1 + country3);
			}
			else
				System.out.println(country2 + country3 + country1); //B C A
		}
			
		else if (country3.compareToIgnoreCase(country1) > 0 ) {		//C _ _
			if (country1.compareToIgnoreCase(country2) > 0 )		//C A _
				System.out.println(country3 + country1 + country2); //C A B
			else
				System.out.println(country3 + country2 + country1);	//C B A
		}
		else 
		System.out.println("The countries could not be arranged.");
	}

}
