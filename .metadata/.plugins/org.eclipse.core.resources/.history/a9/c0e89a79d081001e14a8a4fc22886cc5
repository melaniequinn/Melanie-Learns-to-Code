package unit4;
import java.util.*;
//ENTER THE FIRST COUNTRY: Enter the second country: Enter the third country:
//The three countries in descending order are S G F 
//compare strings and use if statements w results to order the input
public class AlphabetizeCountries {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter the first country: ");
		String country1 = input.nextLine();
		System.out.print("Enter the second country: ");
		String country2 = input.nextLine();
		System.out.print("Enter the third country: ");
		String country3 = input.nextLine();
		
		if (country1.compareTo(country2) < 0) {
			if (country1.compareTo(country3) < 0) 
				country1 = "1"; 
			else 
				country1 = "2";
		}
		else
		country1 = "3";
		
		if (country2.compareTo(country3) < 0 ) {
			if (country2.compareTo(country1) < 0)
				country2 = "1";
			else
				country2 = "2";
		}
		else
			country2 = "3";
		
		if (country3.compareTo(country1) < 0 ) {
			if (country3.compareTo(country2) < 0 )
				country3 = "1";
			else
				country3 = "2";
		}
		else country3 = "3";
			
		System.out.println("The countries in decending (reverse alphabetical) order are " + 3 + 2 + 1);
	}

}
