package unit4;
import java.util.*;

/*
 (Days of a month) Write a program that prompts the user to enter the year and the
first three letters of a month name (with the first letter in uppercase) and displays
the number of days in the month. If the input for month is incorrect, display a message
as presented in the following sample runs: 

Jan 2001 has 31 days. 
jan is not a correct month name.
 */
public class Case_DaysoftheMonth {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.print("Enter a year: ");
		int year = input.nextInt();
		System.out.println("Enter the first three letters of a month, starting with a capital letter: ");
		String month = input.nextLine();
		String wtf = input.nextLine();
		
		System.out.println("You have entered " + month + year);
		if ( month == "Feb" ) {
			boolean isLeapYear =
			(year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
			if ( isLeapYear == true )  {
			System.out.println( year + " is a leap year, so there are 29 days in February of " + year + ".");
			}
			else if ( isLeapYear == false ) {
			System.out.println("28 days in " + month + " of " + year );
			}
		}
		else if ( month == "Jan" || month == "Mar" || month == "May" || month == "Jul" || month == "Aug" || month == "Oct" || month == "Dec" ) {
		System.out.println(month + year + " has 31 days."); 
		}
		else if ( month == "Apr" || month == "Jun" || month == "Sep" || month == "Nov" ) {
		System.out.println(month + year + " has 30 days."); 
		}
		else {
			System.out.println(month + " is not a correct month name.");
		}
/*		
		if ( month == 1 )
			System.out.println("31 days in January of " + year );
		else if ( month == 2 ) {
			
			boolean isLeapYear =
					(year % 4 == 0 && year % 100 != 0) || (year % 400 == 0);
				if ( isLeapYear == true )  
				System.out.println( year + " is a leap year, so there are 29 days in February of " + year + ".");
				else if ( isLeapYear == false ) 
				System.out.println("28 days in February of " + year );
			}

		
*/
		
	}

}
