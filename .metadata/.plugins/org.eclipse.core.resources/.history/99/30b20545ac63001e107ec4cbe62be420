package unit4;
import java.util.*;

public class Practicing_If_Statements {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Welcome to, 'Decision Making'! Please enter a value for y: ");
		
		double y;
		double x = 0;
		
		y = input.nextDouble ();		
		if (y > 0) 
		{
			x = 1;

		}
		else x = 0;
		System.out.println("x = " + x );		
		System.out.println("Thanks for playing! If the value of x was 1, you entered a positive vaule!");

		System.out.println("Part two...")
		
		double score;
		double pay = input.nextDouble();
		
		System.out.println("What is your base pay?");
		
		if (score > 90)
		{
			score = score * 1.03
		}
	
		
	}
}
