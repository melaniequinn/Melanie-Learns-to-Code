package unit4;
import java.util.*;
//ENTER THE FIRST COUNTRY: Enter the second country: Enter the third country:
//The three countries in descending order are S G F 
//compare strings and use if statements w results to order the input
public class AlphabetizeCountries {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter the first country: ");
		String country1 = input.nextLine();
		System.out.print("Enter the second country: ");
		String country2 = input.nextLine();
		System.out.print("Enter the third country: ");
		String country3 = input.nextLine();
		
		System.out.println("The countries in descending (reverse alphabetical) order are: ");
		//The largest number is the first for reverse alphabet... find the largest value
		if (country1.compareTo(country2) > 0 ) { //if c1 is longer than c2
			if (country1.compareTo(country3) > 0 ) //if c1 is longer than c3
				System.out.println(country1); //if c1 is longer than c2 and c3, c1 is the longest.
			else if (country1.compareTo(country3) < 0 ) //if c1 is smaller than c3, c3 is the longest.
				System.out.println(country3);	
		}
		else if (country2.compareTo(country3) > 0 ) { //if c2 is longer than c3
			if (country2.compareTo(country1) > 0 ) //if c2 is longer than c1, 
				System.out.println(country2); //c2 is the longest
			else if (country2.compareTo(country1) < 0 ) //if c2 us smaller than c1 but longer than c3
				System.out.println(country1);
		}
		else if (country3.compareTo(country1) > 0 ) { //if c3 is longer than c1
			if (country3.compareTo(country2) > 0 ) //if c3 is longer than c2, 
				System.out.println(country3); //c3 is the longest
			else if (country3.compareTo(country1) < 0 ) //if c2 us smaller than c3 but longer than c1
				System.out.println(country3);
		}
		else 
		System.out.println("The countries in decending (reverse alphabetical) order are " + 3 + 2 + 1);
	}

}
