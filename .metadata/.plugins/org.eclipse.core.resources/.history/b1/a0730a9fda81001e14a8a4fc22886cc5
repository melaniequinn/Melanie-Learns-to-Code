package unit4;
import java.util.*;
//ENTER THE FIRST COUNTRY: Enter the second country: Enter the third country:
//The three countries in descending order are S G F 
//compare strings and use if statements w results to order the input
public class AlphabetizeCountries {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter the first country: ");
		String country1 = input.nextLine();
		System.out.print("Enter the second country: ");
		String country2 = input.nextLine();
		System.out.print("Enter the third country: ");
		String country3 = input.nextLine();
		
		System.out.println("The countries in descending (reverse alphabetical) order are: ");
		
		if (country1.compareToIgnoreCase(country3) > 0)
			System.out.println("country1 is larger than country3");
		if (country1.compareToIgnoreCase(country2) > 0)
			System.out.println("country1 is larger than country2");
		
		if (country2.compareToIgnoreCase(country1) > 0)
			System.out.println("country2 is larger than country1");
		if (country2.compareToIgnoreCase(country3) > 0)
			System.out.println("country2 is larger than country3");		
		
		if (country3.compareToIgnoreCase(country1) > 0)
			System.out.println("country3 is larger than country1");
		if (country3.compareToIgnoreCase(country2) > 0)
			System.out.println("country3 is larger than country2");
		
		}
		else 
		System.out.println("The countries in decending (reverse alphabetical) order are " + 3 + 2 + 1);
	}

}
